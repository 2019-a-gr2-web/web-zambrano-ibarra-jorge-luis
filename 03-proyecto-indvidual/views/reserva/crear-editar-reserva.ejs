<%- include('../fragments/header') %>

<% var creando = typeof reserva === "undefined" ? true : false; %>


<div class="container" style="margin-top:15px">
    <div class="centerDiv">
        <div class="divLogin white">
            <div class="text-center" style="margin-bottom: 10px">
                <h2 style="color:black"><%= creando ? 'Crear Reserva' : 'Actualizar Reserva' %></h2>
            </div>
            <form action="/aventura/reserva/<%= creando ? 'crear' : 'actualizar' %>-reserva/<%= creando ? '' : reserva.idReserva %>"
                  method="post">

                <div class="form-group row">
                    <label for="fechaReserva" class="form-control-label col-sm-2" style="color:black">Fecha:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="date" name="fechaReserva" id="fechaReserva" class="form-control"
                               style="margin-left: 7px" value="<%= creando ? '' : reserva.fechaReserva %>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="cliente" class="form-control-label col-sm-2" style="color:black">Cliente:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="cliente" name="cliente" type="text" class="form-control" style="margin-left: 7px"
                               value="<%= creando ? '' : reserva.cliente.cedulaCliente %>">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="cancha" class="form-control-label col-sm-2" style="color:black">Cancha:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="cancha" name="cancha" type="number" class="form-control" style="margin-left: 7px"
                               value="<%= creando ? '' : reserva.cancha.numeroCancha %>">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="horaInicial" class="form-control-label col-sm-2" style="color:black">Hora Inicial:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="horaInicial" name="horaInicial" type="number" class="form-control" style="margin-left: 7px"
                               value="<%= creando ? '' : reserva.horaInicial %>">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="horaFinal" class="form-control-label col-sm-2" style="color:black">Hora Final:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="horaFinal" name="horaFinal" type="number" class="form-control" style="margin-left: 7px"
                               value="<%= creando ? '' : reserva.horaFinal %>">
                    </div>
                </div>


                <button class="btn btn-block btn-dark">Aceptar</button>

            </form>
            <br>
            <a href="/aventura/reserva/buscar">
                <button class="btn btn-block btn-danger">Cancelar</button>
            </a>
        </div>
    </div>
</div>
<%- include('../fragments/footer') %>
