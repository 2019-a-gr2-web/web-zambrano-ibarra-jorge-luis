<%- include('../fragments/header') %>

<% var creando = typeof cliente === "undefined" ? true : false; %>



<div class="container" style="margin-top:15px">
    <div class="centerDiv">
        <div class="divLogin white">
            <div class= "text-center" style="margin-bottom: 10px">
                <h2 style="color:black"><%=creando ? 'Crear Cliente' : 'Actualizar Cliente'%></h2>
            </div>
            <form action="/aventura/cliente/<%= creando ? 'crear' : 'actualizar' %>-cliente/<%= creando ? '' : cliente.idCliente %>" method="post">

                <div class="form-group row">
                    <label for="cedulaCliente" class="form-control-label col-sm-2" style="color:black">Cédula:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="text" name="cedulaCliente" id="cedulaCliente" class="form-control" style="margin-left: 5px" value="<%= creando ? '' : cliente.cedulaCliente %>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="nombreCliente" class="form-control-label col-sm-2" style="color:black" >Nombre:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="nombreCliente" name="nombreCliente" type="text" class="form-control" style="margin-left: 5px" value="<%= creando ? '' : cliente.nombreCliente %>">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="telefonoCliente" class="form-control-label col-sm-2" style="color:black">Telefono:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="text" name="telefonoCliente" id="telefonoCliente" class="form-control" style="margin-left: 5px" value="<%= creando ? '' : cliente.telefonoCliente %>" >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="direccionCliente" class="form-control-label col-sm-2" style="color:black">Dirección:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="direccionCliente" name="direccionCliente" type="text" class="form-control" style="margin-left: 5px" value="<%= creando ? '' : cliente.direccionCliente %>">
                    </div>
                </div>


                <button class="btn btn-block btn-dark">Aceptar</button>

            </form>
            <br>
            <a href="/aventura/cliente/buscar">
            <button class="btn btn-block btn-danger">Cancelar</button>
            </a>
        </div>
    </div>
</div>
<%- include('../fragments/footer') %>
