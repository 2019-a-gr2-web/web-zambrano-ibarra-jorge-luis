<%- include('../fragments/header') %>

<% var creando = typeof cancha === "undefined" ? true : false; %>



<div class="container" style="margin-top:15px">
    <div class="centerDiv">
        <div class="divLogin white">
            <div class= "text-center" style="margin-bottom: 10px">
                <h2 style="color:black"><%=creando ? 'Crear Cancha' : 'Actualizar Cancha'%></h2>
            </div>
            <form action="/aventura/cancha/<%= creando ? 'crear' : 'actualizar' %>-cancha/<%= creando ? '' : cancha.idCancha %>" method="post">

                <div class="form-group row">
                    <label for="numeroCancha" class="form-control-label col-sm-2" style="color:black">NÃºmero:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="number" name="numeroCancha" id="numeroCancha" class="form-control" style="margin-left: 7px" value="<%= creando ? '' : cancha.numeroCancha %>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="descripcionCancha" class="form-control-label col-sm-2" style="color:black" >Desc:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="descripcionCancha" name="descripcionCancha" type="text" class="form-control" style="margin-left: 7px" value="<%= creando ? '' : cancha.descripcionCancha %>">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="precioCancha" class="form-control-label col-sm-2" style="color:black">Precio:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input type="number" name="precioCancha" id="precioCancha" class="form-control" style="margin-left: 7px" value="<%= creando ? '' : cancha.precioCancha %>" >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="metroscCancha" class="form-control-label col-sm-2" style="color:black">Metros2:</label>
                    <div class="col-sm-9" style="margin-left: 10px">
                        <input id="metroscCancha" name="metroscCancha" type="number" class="form-control" style="margin-left: 7px" value="<%= creando ? '' : cancha.metroscCancha %>">
                    </div>
                </div>


                <button class="btn btn-block btn-dark">Aceptar</button>

            </form>
            <br>
            <a href="/aventura/cancha/buscar">
                <button class="btn btn-block btn-danger">Cancelar</button>
            </a>
        </div>
    </div>
</div>
<%- include('../fragments/footer') %>
